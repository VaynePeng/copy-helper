{
  "manifest_version": 3,
  "name": "Copy Helper",
  "description": "A copy helper extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "./src/index.html",
    "default_icon": "./assets/copy.png"
  }
}